  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.3",
    "@octokit/action": "^3.18.1",
    "@octokit/core": "^3.6.0",
    "node-fetch": "^3.2.4"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^16.10.5",
    "@typescript-eslint/parser": "^5.8.1",
